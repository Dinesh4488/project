                  img(src="https://img.freepik.com/premium-photo/fast-food-restaurant-shop-store-interior-view-ai-generated-image_629524-5583.jpg", alt="streetfood Image", class="img-fluid")

        .col-md-6.col-lg-6
          .card
            .card-block
              h4
                a(href="/softybakers") Softy Bakers 
              .row
                .col-6
                  p.facilities
                     span.badge.badge-warning A world of flavors, baked to perfection
                     br
                     span.badge.badge-warning Must Try Items
                     br
                     span.badge.badge-warning -Chicken Sandwich
                     br
                     span.badge.badge-warning -Muffins
                .col-6
