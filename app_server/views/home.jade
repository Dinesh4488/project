include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12.text-center   
      h1 Welcome to FoodZee
      p Discover the perfect restaurant for your next meal.

  // Main Content Area
  .row
    .col-12
      .row
        .col-md-6.col-lg-6
          .card
            .card-block
              h4
                a(href="/location") streetfood 
              .row
                .col-6
                  p.facilities
                    span.badge.badge-warning Fast food, fast service!
                    br
                    span.badge.badge-warning Must Try Items
                    br
                    span.badge.badge-warning -Fried Rice
                    br
                    span.badge.badge-warning -Noodles
                    br
                    span.badge.badge-warning - Chicken 65
